 <post>
    <div class="event-form" method="POST">
        <h1>Post An Event</h1>
        <form method="POST" action="/">
            
            
            <select id="Sport" required>
                <option value="Sport">Soccer</option>
                <option value="Basketball">Basketball</option>
                <option value="Football">Football</option>
                <option value="Tennis">Tennis </option>
                <option value="Volleyball">Volleyball</option>
                <option value="Golf">Golf</option>
                <option value="Baseball">Baseball></option>

                

               </select>
            <input required value="title" type="text"  name="title" placeholder="confirm sport" <%= Event.title%>>
            <input required value="name" type="text"  name="name" placeholder="" <%= Event.name%>>
            <input required value="contact" type="text" name="contact" placeholder="contact" <%=Event.contact%> >
            <input required value="date" type="date" name="date"   placeholder="date" <%=Event.date %>>
           
            
               <input required value="address" type="text" name="Address" placeholder="Address" <%= Event.address %>>
               <textarea required name="markdown" id="markdown" >tell us about the event <%=Event.markdown %></textarea>
               <input data-tilt type="submit" value="submit" method="POST">
        </form>
    </div>
</post>  
